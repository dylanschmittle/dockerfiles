alias pod-parrot="kubectl run -i --tty --rm parrot --image=schmillin/parrot --restart=Never -- zsh"
alias pod-kali="kubectl run -i --tty --rm kali --image=schmillin/kali --restart=Never -- zsh"
alias pod-alpine="kubectl run -i --tty --rm alpine --image=schmillin/alpine --restart=Never -- zsh"
alias pod-void="kubectl run -i --tty --rm void --image=schmillin/voidmusl --restart=Never -- sh"
alias pod-arch="kubectl run -i --tty --rm blackarch --image=schmillin/blackarch --restart=Never -- zsh"
alias run-parrot="docker run --rm -ti --network host -v $PWD:/host schmillin/parrot /bin/zsh"
alias run-kali="docker run --rm -ti --network host -v $PWD:/host schmillin/kali /bin/zsh"
alias run-alpine="docker run --rm -ti --network host -v $PWD:/host schmillin/alpine /bin/zsh"
alias run-void="docker run --rm -ti --network host -v $PWD:/host schmillin/voidmusl /bin/sh"
alias run-arch="docker run --rm -ti --network host -v $PWD:/host schmillin/blackarch /bin/zsh"